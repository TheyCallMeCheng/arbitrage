{
    "name": "arbitrage-datafeed",
    "version": "1.0.0",
    "description": "Multi-exchange cryptocurrency data fetchers for arbitrage analysis",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "dev:bybit": "ts-node src/datafeed/bybit/index.ts",
        "fetch:perpetuals": "ts-node src/examples/fetch-perpetuals.ts",
        "clean": "rimraf dist",
        "test_fundingRates_db": "npx ts-node src/examples/test-funding-rates.ts",
        "arbitrage": "ts-node src/strategy/funding-rate-arbitrage.ts",
        "arbitrage-monitor": "ts-node src/strategy/monitor.ts",
        "settlement-monitor": "ts-node src/examples/settlement-monitor-example.ts",
        "funding-trader": "ts-node src/strategy/funding-rate-trader/trader-test.ts",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop ecosystem.config.js",
        "pm2:restart": "pm2 restart ecosystem.config.js",
        "pm2:reload": "pm2 reload ecosystem.config.js",
        "pm2:delete": "pm2 delete ecosystem.config.js",
        "pm2:status": "pm2 status",
        "pm2:logs": "pm2 logs",
        "pm2:logs:trader": "pm2 logs funding-rate-trader",
        "pm2:logs:monitor": "pm2 logs settlement-monitor",
        "pm2:monit": "pm2 monit",
        "pm2:flush": "pm2 flush",
        "pm2:save": "pm2 save",
        "pm2:startup": "pm2 startup"
    },
    "keywords": [
        "arbitrage",
        "cryptocurrency",
        "bybit",
        "funding-rate",
        "datafeed",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.0",
        "better-sqlite3": "^12.2.0",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.13",
        "@types/node": "^20.8.0",
        "pm2": "^6.0.8",
        "rimraf": "^5.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    }
}